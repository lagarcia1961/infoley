{% extends 'base.html.twig' %}

{% block title %}TipoReferencia index
{% endblock %}

{% block body %}
				<div class="row">
					<div class="col-12">
						<h1>Listado de Tipos de Referencias</h1>
					</div>
				</div>

				<div class="row">
					<div class="col-xs-12 text-end my-4">
						<a href="{{ path('app_tipo_referencia_new')}}" class="btn btn-primary">
							Nuevo Tipo de Referencias
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12">
						<table id="datatable-buttons" data-url-eliminar="{{ path('app_tipo_referencia_delete') }}" class="table table-sm table-bordered table-striped datatable-delete">
							<thead>
								<tr>
									<th data-column-type="numeric">Id</th>
									<th>Nombre</th>
									<th data-orderable="false">Acciones</th>
								</tr>
							</thead>
							<tbody>
								{% for tipo_referencia in tipo_referencias %}
									<tr>
										<td>{{ tipo_referencia.id }}</td>
										<td>{{ tipo_referencia.nombre }}</td>
										<td>
											<a class="btn" href="{{ path('app_tipo_referencia_edit', {'id': tipo_referencia.id}) }}" title="Editar Tipo de Referencia">
												<i class="fas fa-edit text-warning"></i>
											</a>
											<a href="javascript:void(0);" class="btn-delete m-2" data-id="{{ tipo_referencia.id }}"
											title="Eliminar Tipo de Referencia">
											<i class="fas fa-trash text-danger"></i>
										</a>
														</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
{% endblock %}
