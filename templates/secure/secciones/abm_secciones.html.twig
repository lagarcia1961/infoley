{% extends 'base.html.twig' %}

{% block body %}
{{ include('modals/_modal_historico.html.twig') }}
<div class="row">
	<div class="col-12">
		<h1>Secciones</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 text-end my-4">
		<a href="{{ path('app_secure_seccion_new')}}" class="btn btn-primary">
			Nueva sección
		</a>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<table id="datatable-buttons" data-url-eliminar="{{ path('app_secure_secciones_delete') }}"
			class="table table-sm table-bordered table-striped datatable-delete">
			<thead>
				<tr>
					<th data-column-type="numeric">Orden</th>
					<th>Tema</th>
					<th data-orderable="false" class="text-center">Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for seccion in secciones %}
				<tr>
					<td>{{ seccion.orden }}</td>
					<td>{{ seccion.tema.nombre }}</td>
					<td class="text-center">
						<a class="m-2" href="{{ path('app_secure_secciones_norma', {'id': seccion.id}) }}" title="Ver sección">
							<i class="fas fa-eye text-secondary"></i>
						</a>
						<a class="m-2" href="{{ path('app_secure_secciones_editar', {'id': seccion.id}) }}" title="Editar sección">
							<i class="fas fa-edit text-warning"></i>
						</a>
						<a href="javascript:void(0);" class="btn-delete m-2" data-id="{{ seccion.id }}"
							title="Eliminar Norma">
							<i class="fas fa-trash text-danger"></i>
						</a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
</div>{% endblock %}