{% extends 'base.html.twig' %}

{% block body %}
{{ include('modals/_modal_historico.html.twig') }}
<div class="row">
	<div class="col-12">
		<h1>Listado de Normas</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 text-end my-4">
		<a href="{{ path('app_norma_new')}}" class="btn btn-primary">
			Nueva Norma
		</a>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<table id="datatable-buttons" data-url-eliminar="{{ path('app_norma_delete') }}"
			data-url-historico="{{ path('app_secure_auditoria_historico')}}"
			class="table table-sm table-bordered table-striped datatable-delete datatable-historico">
			<thead>
				<tr>
					<th data-column-type="numeric">Id</th>
					<th>Tipo de norma</th>
					<th data-column-type="numeric">Numero</th>
					<th data-column-type="numeric">Anio</th>
					<th data-column-type="date">Fecha Publicaci√≥n</th>
					<th>Titulo</th>
					<th>Archivo Actual</th>
					<th data-orderable="false" class="text-center">Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for norma in normas %}
				<tr>
					<td>{{ norma.id }}</td>
					<td>{{ norma.tipoNorma.nombre }}</td>
					<td>{{ norma.numero }}</td>
					<td>{{ norma.anio }}</td>
					<td>{{ norma.fechaPublicacion ? norma.fechaPublicacion|date('d-m-Y') : '' }}</td>
					<td>{{ norma.titulo }}</td>
					<td>
						{% if norma.urlPdf %}
						<a href="{{ asset('uploads/normas/' ~ norma.urlPdf) }}" target="_blank">{{ norma.urlPdf }}</a>
						{% else %}
						Sin adjuntar documento
						{% endif %}
					</td>
					<td class="text-center">
						<a class="m-2" href="{{ path('app_norma_edit', {'id': norma.id}) }}" title="Editar Norma">
							<i class="fas fa-edit text-warning"></i>
						</a>
						<a href="javascript:void(0);" class="btn-delete m-2" data-id="{{ norma.id }}"
							title="Eliminar Norma">
							<i class="fas fa-trash text-danger"></i>
						</a>
						{% if is_granted('ROLE_ADMIN') %}

						<a href="javascript:void(0);" class="btn-historico m-2" data-id="{{ norma.id }}"
							data-entidad="Norma" title="Ver historial">
							<i class="fas fa-history text-info"></i>
						</a>
						{% endif %}
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
</div>{% endblock %}